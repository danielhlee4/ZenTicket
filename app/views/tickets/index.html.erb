<div class="container ticket-index-max-width">
  <h1 class="my-4">Tickets Dashboard</h1>
  <%= render_flash %>
  <div class="row mb-3">
    <div class="col-12">
      <%= link_to 'Create Ticket', new_ticket_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <table class="table table-bordered table-striped">
        <thead class="thead-dark">
          <tr>
            <th style="width: 40%;">Title</th>
            <th style="width: 20%;">Priority</th>
            <th style="width: 20%;">Status</th>
            <th style="width: 20%;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @tickets.each do |ticket| %>
            <tr>
              <td><%= ticket.title %></td>
              <td><%= ticket.priority_level %></td>
              <td><%= ticket.status %></td>
              <td>
                <%= link_to 'Details', ticket, class: 'btn btn-secondary btn-sm' %>
                <% if current_user.admin? || current_user == ticket.user %>
                  <%= link_to 'Edit', edit_ticket_path(ticket), class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Delete', ticket, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning btn-sm' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="logout-button">
    <%= link_to 'Logout', login_path, method: :delete, data: { confirm: 'Are you sure you want to log out?' }, class: 'btn btn-danger' %>
  </div>
</div>
